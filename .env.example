# Environment Configuration for LOFERSIL Landing Page

# Build Environment
NODE_ENV=development

# Development Server
PORT=3000
HOST=localhost

# Analytics (Optional)
GOOGLE_ANALYTICS_ID=
HOTJAR_ID=

# Social Media (Optional)
TWITTER_HANDLE=
FACEBOOK_URL=
INSTAGRAM_URL=
LINKEDIN_URL=

# Contact Information
CONTACT_EMAIL=info@lofersil.com
PHONE_NUMBER=

# Formspree Configuration
VITE_FORMSPREE_ID=your_formspree_form_id_here

# SMTP Configuration for Contact Form
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password_here
FROM_EMAIL=your_email@gmail.com
TO_EMAIL=contact@lofersil.com
ALLOWED_ORIGINS=https://lofersil.vercel.app

# Company Information
COMPANY_NAME=LOFERSIL
COMPANY_DESCRIPTION=Premium products and services for discerning customers
WEBSITE_URL=https://lofersil.vercel.app

# SEO Configuration
DEFAULT_LOCALE=en
SITE_NAME=LOFERSIL
SITE_TITLE=LOFERSIL - Premium Products & Services
SITE_DESCRIPTION=Discover LOFERSIL's premium collection of products and services. Quality and excellence in everything we offer.

# Social Media Meta Tags
OG_IMAGE_URL=https://lofersil.vercel.app/images/og-image.jpg
TWITTER_CARD_TYPE=summary_large_image

# Performance Monitoring
SENTRY_DSN=
PERFORMANCE_MONITORING=false

# Feature Flags
ENABLE_ANALYTICS=false
ENABLE_ERROR_TRACKING=false
ENABLE_PERFORMANCE_MONITORING=false

# Development Settings
DEBUG_MODE=false
VERBOSE_LOGGING=false
ENABLE_SOURCE_MAPS=true

# MCP (Model Context Protocol) Configuration
# Server URL for MCP connection (WebSocket or HTTP)
MCP_SERVER_URL=ws://localhost:3000

# API Key for MCP server authentication
MCP_API_KEY=your-mcp-api-key-here

# Optional client identifier for MCP server
MCP_CLIENT_ID=opencode-client

# Connection settings
MCP_RECONNECT_INTERVAL=5000
MCP_MAX_RECONNECT_ATTEMPTS=5

# Enable MCP integration
ENABLE_MCP_INTEGRATION=false

# AI API Keys
# Gemini API Key (get from https://makersuite.google.com/app/apikey)
GEMINI_API_KEY=your_gemini_api_key_here

# OpenAI API Key (get from https://platform.openai.com/api-keys)
OPENAI_API_KEY=your_openai_api_key_here

# Context7 API Key
CONTEXT7_API_KEY=your_context7_api_key_here

# Telegram Bot Configuration
# Get bot token from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Chat ID for sending messages (can be user ID or group ID)
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# Enable/disable the Telegram plugin
TELEGRAM_ENABLED=true

# Idle timeout in milliseconds (how long user must be inactive before notification)
# Default: 300000 (5 minutes), Range: 60000-3600000 (1 minute to 1 hour)
TELEGRAM_IDLE_TIMEOUT=300000

# Check interval in milliseconds (how often to check for activity)
# Default: 30000 (30 seconds), Range: 5000-300000 (5 seconds to 5 minutes)
TELEGRAM_CHECK_INTERVAL=30000

# Maximum messages to store in memory (prevents memory leaks)
TELEGRAM_MAX_MESSAGES=50

# Maximum retry attempts for failed messages
TELEGRAM_MAX_RETRIES=3

# Rate limit between messages in milliseconds
# Default: 1000 (1 second), Range: 500-10000 (0.5 to 10 seconds)
TELEGRAM_RATE_LIMIT_MS=1000

# Notification delay in milliseconds
TELEGRAM_NOTIFICATION_DELAY_MS=5000

# Test mode settings (set to true to prevent sending real messages)
TELEGRAM_TEST_MODE=true

# Test chat ID for development (optional, uses mock if not set)
TELEGRAM_TEST_CHAT_ID=