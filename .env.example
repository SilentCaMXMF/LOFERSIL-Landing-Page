# =============================================================================
# LOFERSIL Landing Page - Environment Variables Configuration
# =============================================================================
# Copy this file to .env and fill in your actual values
# Never commit the .env file to version control
# =============================================================================

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
# Port for the development server
PORT=3000

# Environment mode (development, production, test)
NODE_ENV=development

# Base URL for the application
BASE_URL=https://your-domain.com

# API base URL (for client-side API calls)
API_BASE_URL=https://your-domain.com/api

# =============================================================================
# EMAIL/SMTP CONFIGURATION (Contact Form)
# =============================================================================
# SMTP server configuration for sending contact form emails
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false

# SMTP authentication credentials
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Email configuration
FROM_EMAIL=noreply@your-domain.com
TO_EMAIL=contact@your-domain.com

# Email service provider (optional - alternative to SMTP)
EMAILJS_SERVICE_ID=your-emailjs-service-id
EMAILJS_TEMPLATE_ID=your-emailjs-template-id
EMAILJS_PUBLIC_KEY=your-emailjs-public-key

# =============================================================================
# PUSH NOTIFICATIONS (VAPID KEYS)
# =============================================================================
# Generate VAPID keys using: web-push generate-vapid-keys
VAPID_PUBLIC_KEY=your-vapid-public-key
VAPID_PRIVATE_KEY=your-vapid-private-key
VAPID_EMAIL=your-email@your-domain.com

# Push notification service endpoint
PUSH_SERVICE_ENDPOINT=/api/push-subscription

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# CSRF protection secret (generate a random 32+ character string)
CSRF_SECRET=your-csrf-secret-key-here

# CSRF token endpoint
CSRF_TOKEN_ENDPOINT=/api/csrf-token

# JWT secret for authentication (if needed)
JWT_SECRET=your-jwt-secret-key-here

# Rate limiting configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# API rate limiting (more restrictive)
API_RATE_LIMIT_WINDOW_MS=900000
API_RATE_LIMIT_MAX_REQUESTS=20

# Contact form rate limiting (strict)
CONTACT_RATE_LIMIT_MAX=5

# CSRF token rate limiting
CSRF_RATE_LIMIT_MAX=20

# Disable rate limiting in development (useful for testing)
DISABLE_RATE_LIMITING=false

# Session secret (if using sessions)
SESSION_SECRET=your-session-secret-key-here

# =============================================================================
# ANALYTICS & MONITORING
# =============================================================================
# Google Analytics
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX

# Google Tag Manager (optional)
GTM_ID=GTM-XXXXXXX

# Sentry error tracking (optional)
SENTRY_DSN=your-sentry-dsn-here

# Performance monitoring
ENABLE_PERFORMANCE_MONITORING=true

# =============================================================================
# API INTEGRATIONS
# =============================================================================
# OpenAI API (for AI features)
OPENAI_API_KEY=your-openai-api-key

# Google Gemini API (alternative AI service)
GEMINI_API_KEY=your-gemini-api-key

# MCP (Model Context Protocol) Integration
MCP_API_KEY=your-mcp-api-key
MCP_SERVER_URL=ws://localhost:3000
ENABLE_MCP_INTEGRATION=false

# GitHub Projects Integration (for Kanban board management)
GITHUB_ACCESS_TOKEN=your-github-personal-access-token
GITHUB_PROJECT_ID=PVT_kwDOB2ZJcM4Akw2Q
GITHUB_REPOSITORY_OWNER=SilentCaMXMF
GITHUB_REPOSITORY_NAME=LOFERSIL-Landing-Page

# Cloudflare (for CDN and security)
CLOUDFLARE_API_TOKEN=your-cloudflare-api-token
CLOUDFLARE_ACCOUNT_ID=your-cloudflare-account-id

# =============================================================================
# SEO & SOCIAL MEDIA
# =============================================================================
# Site configuration for SEO
SITE_NAME=LOFERSIL
SITE_DESCRIPTION=Descubra produtos premium e serviços de confiança na LOFERSIL
SITE_URL=https://your-domain.com

# Social media handles
TWITTER_HANDLE=@lofersil
FACEBOOK_APP_ID=your-facebook-app-id

# Social media URLs (for structured data)
FACEBOOK_URL=https://facebook.com/lofersil
INSTAGRAM_URL=https://instagram.com/lofersil
LINKEDIN_URL=https://linkedin.com/company/lofersil

# =============================================================================
# PWA CONFIGURATION
# =============================================================================
# PWA manifest settings
PWA_NAME=LOFERSIL - Produtos Premium & Serviços
PWA_SHORT_NAME=LOFERSIL
PWA_THEME_COLOR=#2563eb
PWA_BACKGROUND_COLOR=#ffffff

# Service worker configuration
SW_CACHE_STRATEGY=networkFirst
SW_CACHE_VERSION=1.0.0

# =============================================================================
# DATABASE CONFIGURATION (if needed)
# =============================================================================
# PostgreSQL configuration (if using database)
DB_HOST=localhost
DB_PORT=5432
DB_USER=your-username
DB_PASSWORD=your-password
DB_NAME=lofersil_db
DB_SSL=false

# MongoDB configuration (alternative)
MONGODB_URI=mongodb://localhost:27017/lofersil

# Redis configuration (for caching/sessions)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your-redis-password

# =============================================================================
# CONTENT DELIVERY & STORAGE
# =============================================================================
# CDN configuration
CDN_URL=https://cdn.your-domain.com
ASSETS_URL=https://assets.your-domain.com

# File storage (if using cloud storage)
AWS_S3_BUCKET=your-s3-bucket
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1

# =============================================================================
# DEVELOPMENT & DEBUGGING
# =============================================================================
# Debug mode
DEBUG=false

# Log level (error, warn, info, debug)
LOG_LEVEL=info

# Enable source maps in production
ENABLE_SOURCE_MAPS=false

# Hot reload configuration
HOT_RELOAD=true

# =============================================================================
# THIRD-PARTY SERVICES
# =============================================================================
# ReCAPTCHA (for form protection)
RECAPTCHA_SITE_KEY=your-recaptcha-site-key
RECAPTCHA_SECRET_KEY=your-recaptcha-secret-key

# Mailchimp (for newsletter)
MAILCHIMP_API_KEY=your-mailchimp-api-key
MAILCHIMP_LIST_ID=your-mailchimp-list-id

# Stripe (for payments, if needed)
STRIPE_PUBLIC_KEY=pk_test_your-stripe-public-key
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key

# =============================================================================
# LOCALIZATION & INTERNATIONALIZATION
# =============================================================================
# Default language
DEFAULT_LANGUAGE=pt-PT

# Supported languages
SUPPORTED_LANGUAGES=pt-PT,en-US

# Translation service API (if using external translation)
TRANSLATION_API_KEY=your-translation-api-key

# =============================================================================
# PERFORMANCE & OPTIMIZATION
# =============================================================================
# Image optimization
ENABLE_IMAGE_OPTIMIZATION=true
IMAGE_QUALITY=80
WEBP_QUALITY=75

# Caching configuration
CACHE_TTL=3600
STATIC_CACHE_TTL=86400

# Compression
ENABLE_COMPRESSION=true
COMPRESSION_LEVEL=6

# =============================================================================
# FEATURE FLAGS
# =============================================================================
# Enable/disable features
ENABLE_CONTACT_FORM=true
ENABLE_PUSH_NOTIFICATIONS=true
ENABLE_ANALYTICS=true
ENABLE_PWA=true
ENABLE_SERVICE_WORKER=true
ENABLE_OFFLINE_SUPPORT=true

# Beta features
ENABLE_BETA_FEATURES=false
ENABLE_AI_FEATURES=false

# =============================================================================
# TESTING CONFIGURATION
# =============================================================================
# Test environment settings
TEST_DATABASE_URL=postgresql://test:test@localhost:5432/lofersil_test
TEST_EMAIL_SERVICE=false
TEST_EXTERNAL_APIS=false

# =============================================================================
# DEPLOYMENT CONFIGURATION
# =============================================================================
# Vercel deployment
VERCEL_ORG_ID=your-vercel-org-id
VERCEL_PROJECT_ID=your-vercel-project-id

# Docker configuration
DOCKER_REGISTRY=your-registry.com
DOCKER_IMAGE_NAME=lofersil-landing-page
DOCKER_TAG=latest

# =============================================================================
# MONITORING & HEALTH CHECKS
# =============================================================================
# Health check endpoints
HEALTH_CHECK_ENDPOINT=/api/health
METRICS_ENDPOINT=/api/metrics

# Uptime monitoring
UPTIME_CHECK_URL=https://your-domain.com/api/health

# =============================================================================
# LEGAL & COMPLIANCE
# =============================================================================
# Privacy policy and terms
PRIVACY_POLICY_URL=/privacy.html
TERMS_OF_SERVICE_URL=/terms.html

# Cookie consent
ENABLE_COOKIE_CONSENT=true
COOKIE_CONSENT_DURATION=365

# GDPR compliance
GDPR_COMPLIANCE=true
DATA_RETENTION_DAYS=365

# =============================================================================
# BACKUP & RECOVERY
# =============================================================================
# Backup configuration
BACKUP_ENABLED=false
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_URL=s3://your-backup-bucket

# =============================================================================
# NOTES & SECURITY BEST PRACTICES
# =============================================================================
# 1. Generate strong secrets using: openssl rand -base64 32
# 2. Use environment-specific .env files (.env.development, .env.production)
# 3. Never commit .env files to version control
# 4. Use different values for development and production
# 5. Regularly rotate secrets and API keys
# 6. Use HTTPS in production environments
# 7. Implement proper error handling and logging
# 8. Monitor for unauthorized access attempts
# 9. Keep all dependencies updated
# 10. Use a .env.local file for local overrides (gitignored)

