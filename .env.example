# Environment Configuration for LOFERSIL Landing Page

# Build Environment
NODE_ENV=development

# Development Server
PORT=3000
HOST=localhost

# Analytics (Optional)
GOOGLE_ANALYTICS_ID=
HOTJAR_ID=

# Social Media (Optional)
TWITTER_HANDLE=
FACEBOOK_URL=
INSTAGRAM_URL=
LINKEDIN_URL=

# Contact Information
CONTACT_EMAIL=info@lofersil.com
PHONE_NUMBER=

# Formspree Configuration
VITE_FORMSPREE_ID=your_formspree_form_id_here

# SMTP Configuration for Contact Form
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password_here
FROM_EMAIL=your_email@gmail.com
TO_EMAIL=pedroocalado@gmail.com
ALLOWED_ORIGINS=https://lofersil.vercel.app

# Company Information
COMPANY_NAME=LOFERSIL
COMPANY_DESCRIPTION=Premium products and services for discerning customers
WEBSITE_URL=https://lofersil.vercel.app

# API Endpoints
CONTACT_API_ENDPOINT=/api/contact

# SEO Configuration
DEFAULT_LOCALE=en
SITE_NAME=LOFERSIL
SITE_TITLE=LOFERSIL - Premium Products & Services
SITE_DESCRIPTION=Discover LOFERSIL's premium collection of products and services. Quality and excellence in everything we offer.

# Social Media Meta Tags
OG_IMAGE_URL=https://lofersil.vercel.app/images/og-image.jpg
TWITTER_CARD_TYPE=summary_large_image

# Performance Monitoring
SENTRY_DSN=
PERFORMANCE_MONITORING=false

# Feature Flags
ENABLE_ANALYTICS=false
ENABLE_ERROR_TRACKING=false
ENABLE_PERFORMANCE_MONITORING=false

# Development Settings
DEBUG_MODE=false
VERBOSE_LOGGING=false
ENABLE_SOURCE_MAPS=true

# MCP (Model Context Protocol) Configuration
# Server URL for MCP connection (WebSocket or HTTP)
MCP_SERVER_URL=ws://localhost:3000

# API Key for MCP server authentication
MCP_API_KEY=your-mcp-api-key-here

# Optional client identifier for MCP server
MCP_CLIENT_ID=opencode-client

# Connection settings
MCP_RECONNECT_INTERVAL=5000
MCP_MAX_RECONNECT_ATTEMPTS=5

# Enable MCP integration
ENABLE_MCP_INTEGRATION=false

# AI API Keys
# Gemini API Key (get from https://makersuite.google.com/app/apikey)
GEMINI_API_KEY=your_gemini_api_key_here

# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_API_BASE_URL=https://api.openai.com/v1

# Context7 API Key
CONTEXT7_API_KEY=your_context7_api_key_here

# Cloudflare API Configuration
CLOUDFLARE_API_TOKEN=your_cloudflare_api_token_here
CLOUDFLARE_API_BASE_URL=https://api.cloudflare.com/client/v4

# GitHub Issues Reviewer System Configuration
GITHUB_ISSUES_REVIEWER_API_KEY=your_github_issues_reviewer_api_key_here
GITHUB_WEBHOOK_SECRET=your_github_webhook_secret_here
GITHUB_ISSUES_AUTO_ASSIGNMENT=true
GITHUB_ISSUES_PROGRESS_TRACKING=true
GITHUB_ISSUES_REPORTING=true

# Production Monitoring
SENTRY_DSN=your_sentry_dsn_here
LOG_LEVEL=info
ENABLE_PERFORMANCE_MONITORING=true
ENABLE_ERROR_TRACKING=true

# Database/Storage (if needed for task persistence)
DATABASE_URL=your_database_url_here
REDIS_URL=your_redis_url_here

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_INTERVAL=86400000
BACKUP_RETENTION_DAYS=30

# Security Headers
SECURITY_HEADERS_ENABLED=true
HSTS_MAX_AGE=31536000
CSP_ENABLED=true

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Health Check Configuration
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_TIMEOUT=5000
HEALTH_CHECK_INTERVAL=30000

