# LOFERSIL Landing Page Environment Variables
# Copy this file to .env.local for local development
# Set these in your Vercel dashboard for production deployment

# ================================
# BASIC CONFIGURATION
# ================================
NODE_ENV=development
WEBSITE_URL=https://lofersil.pt

# ================================
# EMAIL CONFIGURATION (Contact Form)
# ================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
CONTACT_EMAIL=contact@lofersil.pt

# ================================
# ANALYTICS & TRACKING
# ================================
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
GOOGLE_TAG_MANAGER_ID=GTM-XXXXXXX

# ================================
# AI SERVICES (Optional)
# ================================
OPENAI_API_KEY=sk-your-openai-key
GEMINI_API_KEY=your-gemini-key

# ================================
# INTEGRATIONS (Optional)
# ================================
ENABLE_MCP_INTEGRATION=false
MCP_SERVER_URL=https://your-mcp-server.com

# ================================
# SECURITY
# ================================
CORS_ORIGIN=https://lofersil.pt
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ================================
# DEVELOPMENT ONLY
# ================================
# These should only be used in development
DEBUG=false
LOG_LEVEL=info