name: Deploy to Vercel

on:
  push:
    branches: [preview-deployment] # Only auto-deploy preview for staging
  pull_request:
    branches: [preview-deployment] # PRs to preview-deployment for review
  workflow_dispatch:
    inputs:
      environment:
        description: "Deploy to environment"
        required: true
        default: "preview"
        type: choice
        options:
          - preview
          - production
      branch:
        description: "Source branch (default: preview-deployment)"
        required: false
        default: "preview-deployment"
        type: string

jobs:
  deploy-preview:
    if: github.ref == 'refs/heads/preview-deployment' && (github.event_name == 'push' || (github.event_name == 'workflow_dispatch' && github.event.inputs.environment == 'preview'))
    runs-on: ubuntu-latest
    name: Deploy to Staging
    environment: staging
    steps:
      - name: Checkout
        uses: actions/checkout@v4
        with:
          fetch-depth: 0

      - name: Setup Node.js
        uses: actions/setup-node@v4
        with:
          node-version: "20"
          cache: "npm"

      - name: Verify required secrets
        run: |
          echo "=== VERIFYING SECRETS ==="
          if [ -z "$VERCEL_TOKEN" ]; then
            echo "::error::VERCEL_TOKEN secret is not set"
            exit 1
          else
            echo "âœ… VERCEL_TOKEN is set"
          fi

          if [ -z "$VERCEL_ORG_ID" ]; then
            echo "::error::VERCEL_ORG_ID secret is not set"
            exit 1
          else
            echo "âœ… VERCEL_ORG_ID is set"
          fi

          if [ -z "$VERCEL_PROJECT_ID" ]; then
            echo "::error::VERCEL_PROJECT_ID secret is not set"
            exit 1
          else
            echo "âœ… VERCEL_PROJECT_ID is set"
          fi

          echo "=== SECRET VALUES (VERIFIED ONLY LENGTH) ==="
          echo "VERCEL_TOKEN length: ${#VERCEL_TOKEN}"
          echo "VERCEL_ORG_ID length: ${#VERCEL_ORG_ID}"
          echo "VERCEL_PROJECT_ID length: ${#VERCEL_PROJECT_ID}"
        env:
          VERCEL_TOKEN: ${{ secrets.VERCEL_TOKEN }}
          VERCEL_ORG_ID: ${{ secrets.VERCEL_ORG_ID }}
          VERCEL_PROJECT_ID: ${{ secrets.VERCEL_PROJECT_ID }}

      - name: Debug Environment
        run: |
          echo "=== ENVIRONMENT DEBUG ==="
          echo "Node Version: $(node --version)"
          echo "NPM Version: $(npm --version)"
          echo "Working Directory: $(pwd)"
          echo "Disk Space: $(df -h .)"
          echo "Memory: $(free -h)"
          echo "Files in directory: $(ls -la)"
          echo "Package Lock Exists: $(test -f package-lock.json && echo YES || echo NO)"
          echo "Git Status: $(git status --porcelain)"
          echo "Git Branch: $(git branch --show-current)"
          echo "Git Commit: $(git rev-parse HEAD)"
          echo "GitHub Event: ${{ github.event_name }}"
          echo "GitHub Ref: ${{ github.ref }}"
          echo "GitHub Branch: ${{ github.ref_name }}"

      - name: Verify Package Lock Sync
        run: |
          echo "=== PACKAGE LOCK VERIFICATION ==="
          if ! npm ls --depth=0 >/dev/null 2>&1; then
            echo "Package lock out of sync, regenerating..."
            rm -f package-lock.json
            npm install --package-lock-only
          else
            echo "Package lock appears synchronized"
          fi

      - name: Install dependencies (Robust)
        run: |
          echo "=== DEPENDENCY INSTALLATION ==="
          if [ -f package-lock.json ]; then
            echo "Attempting npm ci..."
            npm ci --verbose || {
              echo "npm ci failed, falling back to npm install..."
              npm install --verbose
            }
          else
            echo "No package-lock.json found, using npm install..."
            npm install --verbose
          fi

      - name: Run linting
        run: npm run lint || echo "âš ï¸ Linting failed but continuing deployment"

      - name: Build project
        run: |
          echo "=== BUILDING PROJECT ==="
          npm run build
          echo "=== BUILD OUTPUT VERIFICATION ==="
          if [ -d "dist" ]; then
            echo "âœ… Build successful - dist directory created"
            echo "Contents:"
            ls -la dist/
          else
            echo "âŒ Build failed - no dist directory"
            exit 1
          fi

      - name: Setup Vercel CLI
        run: |
          echo "=== SETTING UP VERCEL CLI ==="
          npm install --global vercel@latest
          vercel --version

      - name: Verify Vercel Project Configuration
        run: |
          echo "=== VERIFYING VERCEL PROJECT CONFIGURATION ==="
          echo "Expected Project ID: ${{ secrets.VERCEL_PROJECT_ID }}"
          echo "Expected Org ID: ${{ secrets.VERCEL_ORG_ID }}"

          # Create a temporary vercel.json for the deployment
          cat > vercel.json << EOF
          {
            "version": 2,
            "buildCommand": "npm run build",
            "outputDirectory": "dist",
            "framework": null,
            "cleanUrls": true,
            "trailingSlash": false
          }
          EOF

          echo "âœ… Vercel configuration prepared"

      - name: Deploy to Vercel (Staging)
        id: deploy
        uses: amondnet/vercel-action@v25
        with:
          vercel-token: ${{ secrets.VERCEL_TOKEN }}
          vercel-org-id: ${{ secrets.VERCEL_ORG_ID }}
          vercel-project-id: ${{ secrets.VERCEL_PROJECT_ID }}
          vercel-args: "--debug"
          github-token: ${{ secrets.GITHUB_TOKEN }}

      - name: Verify Deployment
        run: |
          echo "=== DEPLOYMENT VERIFICATION ==="
          if [ "${{ steps.deploy.outputs.preview-url }}" != "" ]; then
            echo "âœ… Deployment successful"
            echo "Preview URL: ${{ steps.deploy.outputs.preview-url }}"
            
            # Optional: Test the deployment
            echo "Testing deployment URL..."
            if curl -f -s -o /dev/null "${{ steps.deploy.outputs.preview-url }}"; then
              echo "âœ… Deployment URL is responding"
            else
              echo "âš ï¸ Deployment URL not responding (may still be propagating)"
            fi
          else
            echo "âŒ Deployment failed - no preview URL returned"
            exit 1
          fi

      - name: Deployment Summary
        run: |
          echo "## ðŸš€ Staging Deployment Summary" >> $GITHUB_STEP_SUMMARY
          echo "- **Branch**: ${{ github.ref_name }}" >> $GITHUB_STEP_SUMMARY
          echo "- **Commit**: ${{ github.sha }}" >> $GITHUB_STEP_SUMMARY
          echo "- **Environment**: Staging" >> $GITHUB_STEP_SUMMARY
          if [ "${{ steps.deploy.outputs.preview-url }}" != "" ]; then
            echo "- **Staging URL**: ${{ steps.deploy.outputs.preview-url }}" >> $GITHUB_STEP_SUMMARY
          fi
          echo "- **Status**: âœ… Success" >> $GITHUB_STEP_SUMMARY
          echo "- **Build Time**: $(date)" >> $GITHUB_STEP_SUMMARY

      - name: Notify on failure
        if: failure()
        run: |
          echo "::error::Staging deployment failed for branch ${{ github.ref_name }}"
          echo "::error::Commit: ${{ github.sha }}"
          echo "::error::Check logs above for details"

  deploy-production:
    if: github.event_name == 'workflow_dispatch' && github.event.inputs.environment == 'production'
    runs-on: ubuntu-latest
    name: Deploy to Production
    environment:
      name: production
      url: ${{ steps.deploy.outputs.preview-url }}

    steps:
      - name: Checkout
        uses: actions/checkout@v4
        with:
          ref: ${{ github.event.inputs.branch || 'preview-deployment' }}
          fetch-depth: 0

      - name: Setup Node.js
        uses: actions/setup-node@v4
        with:
          node-version: "20"
          cache: "npm"

      - name: Verify required secrets
        run: |
          echo "=== VERIFYING SECRETS FOR PRODUCTION ==="
          if [ -z "$VERCEL_TOKEN" ]; then
            echo "::error::VERCEL_TOKEN secret is not set"
            exit 1
          fi
          if [ -z "$VERCEL_ORG_ID" ]; then
            echo "::error::VERCEL_ORG_ID secret is not set"
            exit 1
          fi
          if [ -z "$VERCEL_PROJECT_ID" ]; then
            echo "::error::VERCEL_PROJECT_ID secret is not set"
            exit 1
          fi
        env:
          VERCEL_TOKEN: ${{ secrets.VERCEL_TOKEN }}
          VERCEL_ORG_ID: ${{ secrets.VERCEL_ORG_ID }}
          VERCEL_PROJECT_ID: ${{ secrets.VERCEL_PROJECT_ID }}

      - name: Install dependencies
        run: npm ci

      - name: Run linting
        run: npm run lint || echo "âš ï¸ Linting failed but continuing deployment"

      - name: Build project
        run: npm run build

      - name: Deploy to Vercel (Production)
        id: deploy
        uses: amondnet/vercel-action@v25
        with:
          vercel-token: ${{ secrets.VERCEL_TOKEN }}
          vercel-org-id: ${{ secrets.VERCEL_ORG_ID }}
          vercel-project-id: ${{ secrets.VERCEL_PROJECT_ID }}
          vercel-args: "--prod"
          github-token: ${{ secrets.GITHUB_TOKEN }}

      - name: Deployment Summary
        run: |
          echo "## ðŸš€ Production Deployment Summary" >> $GITHUB_STEP_SUMMARY
          echo "- **Branch**: ${{ github.event.inputs.branch || 'preview-deployment' }}" >> $GITHUB_STEP_SUMMARY
          echo "- **Commit**: ${{ github.sha }}" >> $GITHUB_STEP_SUMMARY
          echo "- **Environment**: Production" >> $GITHUB_STEP_SUMMARY
          if [ "${{ steps.deploy.outputs.preview-url }}" != "" ]; then
            echo "- **Production URL**: ${{ steps.deploy.outputs.preview-url }}" >> $GITHUB_STEP_SUMMARY
          fi
          echo "- **Status**: âœ… Success" >> $GITHUB_STEP_SUMMARY

      - name: Notify on failure
        if: failure()
        run: |
          echo "::error::Production deployment failed"
          echo "::error::Source branch: ${{ github.event.inputs.branch || 'preview-deployment' }}"
          echo "::error::Commit: ${{ github.sha }}"
          echo "::error::Check logs above for details"
