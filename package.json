{
  "name": "lofersil-landing-page",
  "version": "1.0.0",
  "description": "LOFERSIL Landing Page - Static TypeScript site for Vercel deployment",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "npm run build:compile && npm run build:astro",
    "build:compile": "tsc",
    "build:astro": "astro build",
    "build:analyze": "ANALYZE=true npm run build:astro",
    "dev": "astro dev",
    "preview": "astro preview",
    "start": "astro dev",
    "build:css": "postcss src/styles/main.css -o dist/main.css",
    "lint": "eslint src/**/*.{ts,astro} --ext .ts,.astro",
    "lint:fix": "eslint src/**/*.{ts,astro} --fix",
    "format": "prettier --write src/**/*.{ts,css,astro}",
    "format:check": "prettier --check src/**/*.{ts,css,astro}",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "ci": "npm run lint && npm run format:check && npm run test && npm run build"
  },
  "keywords": [
    "landing-page",
    "typescript",
    "static-site",
    "vercel",
    "lofersil"
  ],
  "author": "LOFERSIL",
  "license": "MIT",
  "devDependencies": {
    "@astrojs/partytown": "^2.1.4",
    "@astrojs/tailwind": "^6.0.2",
    "@astrojs/vercel": "^9.0.4",
    "@types/dompurify": "^3.2.0",
    "@types/jsdom": "^21.1.6",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "@vitest/ui": "^2.0.0",
    "astro": "^5.17.2",
    "autoprefixer": "^10.4.0",
    "c8": "^10.0.0",
    "cssnano": "^6.0.0",
    "eslint": "^9.0.0",
    "jsdom": "^25.0.0",
    "postcss": "^8.4.0",
    "postcss-cli": "^10.0.0",
    "postcss-import": "^16.1.1",
    "prettier": "^3.0.0",
    "rollup-plugin-visualizer": "^6.0.5",
    "serve": "^14.0.0",
    "typescript": "^5.0.0",
    "vite-bundle-analyzer": "^1.3.6",
    "vitest": "^2.0.0"
  },
  "engines": {
    "node": "22.x"
  },
  "packageManager": "npm@10.0.0",
  "dependencies": {
    "dompurify": "^3.3.0"
  }
}
