---
import MainLayout from '../../layouts/MainLayout.astro';

const title = "LOFERSIL - Premium Products & Services in Lisbon | Trusted Store";
const description = "Discover premium products and trusted services at LOFERSIL, your reference store in Lisbon. Stationery, baby products, jewelry and more.";

const alternate = {
  'pt': '/',
};
---

<MainLayout title={title} description={description} lang="en" alternate={alternate}>
  <!-- Skip Navigation Links -->
  <a href="#main-content" class="skip-link">Skip to main content</a>
  <a href="#nav-menu" class="skip-link">Skip to navigation</a>
  <a href="#contact-form" class="skip-link">Skip to contact form</a>

  <header id="main-header">
    <div class="header-container">
      <div class="nav-logo">
        <a href="#main-content" class="logo-link">
          <img
            src="/assets/images/favicon-48x48-lettuce.svg"
            alt="LOFERSIL Logo - Store in Lisbon"
          />
        </a>
        <div class="nav-contact">
          <div class="nav-address">
            R. Gomes Freire 187 B, 1150-178 Lisbon
          </div>
          <div class="nav-phone">21 353 1555</div>
        </div>
      </div>
      <button
        id="nav-toggle"
        class="nav-toggle"
        aria-label="Toggle navigation menu"
        aria-expanded="false"
      >
        <span></span>
        <span></span>
        <span></span>
      </button>
      <nav id="nav-menu" class="nav-menu" aria-label="Main menu">
        <ul class="nav-list">
          <li>
            <a href="#about" class="nav-link">About Us</a>
          </li>
          <li>
            <a href="#features" class="nav-link">Services</a>
          </li>
          <li>
            <a href="#products-showcase" class="nav-link">Products</a>
          </li>
          <li>
            <a href="#testimonials" class="nav-link">Testimonials</a>
          </li>
          <li>
            <a href="#contact" class="nav-link">Contact</a>
          </li>
          <li>
            <button
              id="theme-toggle"
              class="theme-toggle"
              aria-label="Toggle light/dark theme"
              title="Toggle theme"
            >
              <span class="theme-icon">ðŸŒ™</span>
            </button>
          </li>
          <li>
            <button
              id="lang-toggle"
              class="lang-toggle"
              aria-label="Switch language to Portuguese"
              title="PortuguÃªs"
            >
              PT
            </button>
          </li>
        </ul>
      </nav>
    </div>
  </header>

  <main id="main-content">
    <!-- Hero Section -->
    <section id="hero" class="hero">
      <div class="hero-content">
        <h1 class="hero-title">LOFERSIL - Excellence in Stationery and Services</h1>
        <p class="hero-subtitle">
          Serving Lisbon for over 30 years with premium products and trusted
          services
        </p>
        <div class="hero-cta">
          <a href="#contact" class="btn btn-primary">Contact Us</a>
          <a href="#products-showcase" class="btn btn-secondary">Explore Products</a>
        </div>
      </div>
      <div class="hero-image">
        <img
          src="/assets/images/Frente loja.jpg"
          alt="LOFERSIL Storefront in Lisbon"
          loading="lazy"
        />
      </div>
    </section>

    <!-- About Section -->
    <section id="about" class="about">
      <div class="container">
        <h2 class="section-title">About Us</h2>
        <div class="about-content">
          <div class="about-text">
            <p>
              Founded in 1991, LOFERSIL is a reference store in Lisbon,
              specializing in stationery, various items, and accounting services.
            </p>
            <p>
              Our strategic location in Saldanha, in the heart of Lisbon,
              allows us to serve customers from throughout the city with maximum
              convenience and quality.
            </p>
            <div class="about-stats">
              <div class="stat">
                <span class="stat-number">30+</span>
                <span class="stat-label">Years of Experience</span>
              </div>
              <div class="stat">
                <span class="stat-number">10k+</span>
                <span class="stat-label">Satisfied Customers</span>
              </div>
              <div class="stat">
                <span class="stat-number">100%</span>
                <span class="stat-label">Reliability</span>
              </div>
            </div>
          </div>
          <div class="about-image">
            <img
              src="/assets/images/loja-interior.jpg"
              alt="LOFERSIL Interior"
              loading="lazy"
            />
          </div>
        </div>
      </div>
    </section>

    <!-- Features/Services Section -->
    <section id="features" class="features">
      <div class="container">
        <h2 class="section-title">Our Services</h2>
        <div class="features-grid">
          <div class="feature-card">
            <div class="feature-icon">ðŸ“š</div>
            <h3>Stationery</h3>
            <p>
              Wide variety of office supplies, notebooks, pens, and premium
              stationery items.
            </p>
          </div>
          <div class="feature-card">
            <div class="feature-icon">ðŸ‘¶</div>
            <h3>Baby Products</h3>
            <p>
              Quality products for babies and children, with guaranteed safety
              and comfort.
            </p>
          </div>
          <div class="feature-card">
            <div class="feature-icon">ðŸ’Ž</div>
            <h3>Jewelry</h3>
            <p>
              Exclusive selection of fine jewelry and fashion jewelry for all
              occasions.
            </p>
          </div>
          <div class="feature-card">
            <div class="feature-icon">ðŸ”§</div>
            <h3>Services</h3>
            <p>
              Bookbinding, copies, prints, and personalized accounting services.
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- Contact Section -->
    <section id="contact" class="contact">
      <div class="container">
        <h2 class="section-title">Contact Us</h2>
        <div class="contact-content">
          <div class="contact-info">
            <div class="contact-item">
              <h3>Visit Us</h3>
              <address>
                R. Gomes Freire 187 B<br />
                1150-178 Lisbon<br />
                Portugal
              </address>
            </div>
            <div class="contact-item">
              <h3>Phone</h3>
              <p>
                <a href="tel:+351213531555">21 353 1555</a>
              </p>
            </div>
            <div class="contact-item">
              <h3>Email</h3>
              <p>
                <a href="mailto:lofersilpapelaria@gmail.com">lofersilpapelaria@gmail.com</a>
              </p>
            </div>
            <div class="contact-item">
              <h3>Hours</h3>
              <p>
                Monday-Friday: 9am-7pm<br />
                Saturday: 9am-1pm<br />
                Sunday: Closed
              </p>
            </div>
          </div>
          <form id="contact-form" class="contact-form">
            <div class="form-group">
              <label for="name">Name</label>
              <input type="text" id="name" name="name" required />
            </div>
            <div class="form-group">
              <label for="email">Email</label>
              <input type="email" id="email" name="email" required />
            </div>
            <div class="form-group">
              <label for="phone">Phone</label>
              <input type="tel" id="phone" name="phone" />
            </div>
            <div class="form-group">
              <label for="message">Message</label>
              <textarea id="message" name="message" rows="5" required></textarea>
            </div>
            <button type="submit" class="btn btn-primary">
              Send Message
            </button>
          </form>
        </div>
      </div>
    </section>
  </main>

  <!-- Footer -->
  <footer class="footer">
    <div class="container">
      <div class="footer-content">
        <div class="footer-section">
          <h4>LOFERSIL</h4>
          <p>Your trusted store in Lisbon since 1991.</p>
        </div>
        <div class="footer-section">
          <h4>Services</h4>
          <ul>
            <li><a href="#features">Stationery</a></li>
            <li><a href="#features">Baby Products</a></li>
            <li><a href="#features">Jewelry</a></li>
            <li><a href="#features">Services</a></li>
          </ul>
        </div>
        <div class="footer-section">
          <h4>Contact</h4>
          <p>
            R. Gomes Freire 187 B<br />
            1150-178 Lisbon<br />
            Tel: 21 353 1555<br />
            Email: lofersilpapelaria@gmail.com
          </p>
        </div>
      </div>
      <div class="footer-bottom">
        <p>&copy; 2024 LOFERSIL. All rights reserved.</p>
        <div class="footer-links">
          <a href="/en/privacy.html">Privacy Policy</a>
          <a href="/en/terms.html">Terms of Service</a>
        </div>
      </div>
    </div>
  </footer>

  <!-- Scripts -->
  <script type="module" src="/scripts/index.js"></script>
</MainLayout>