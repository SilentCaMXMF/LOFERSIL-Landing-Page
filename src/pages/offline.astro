  <script>
    // Offline page functionality
    class OfflinePage {
      constructor() {
        this.initialize();
      }

      initialize() {
        this.setupEventListeners();
        this.checkConnectionStatus();
      }

      setupEventListeners() {
        const retryBtn = document.getElementById('retry-btn');
        const homeBtn = document.getElementById('home-btn');

        retryBtn?.addEventListener('click', () => {
          window.location.reload();
        });

        homeBtn?.addEventListener('click', () => {
          window.location.href = '/';
        });

        // Listen for online events
        window.addEventListener('online', () => {
          this.showOnlineStatus();
          setTimeout(() => {
            window.location.href = '/';
          }, 1000);
        });

        window.addEventListener('offline', () => {
          this.showOfflineStatus();
        });
      }

      checkConnectionStatus() {
        if (navigator.onLine) {
          this.showOnlineStatus();
        } else {
          this.showOfflineStatus();
        }
      }

      showOnlineStatus() {
        const status = document.createElement('div');
        status.className = 'connection-status online';
        status.innerHTML = 'üü¢ Conex√£o restaurada';
        document.body.appendChild(status);

        setTimeout(() => {
          status.remove();
        }, 3000);
      }

      showOfflineStatus() {
        const status = document.createElement('div');
        status.className = 'connection-status offline';
        status.innerHTML = 'üî¥ Sem conex√£o √† internet';
        document.body.appendChild(status);

        setTimeout(() => {
          status.remove();
        }, 3000);
      }
    }

    // Initialize when DOM is ready
    if (document.readyState === 'loading') {
      document.addEventListener('DOMContentLoaded', () => new OfflinePage());
    } else {
      new OfflinePage();
    }
  </script>

  <style>
    .offline-page {
      min-height: 100vh;
      display: flex;
      align-items: center;
      justify-content: center;
      background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
      padding: 2rem;
    }

    .offline-content {
      text-align: center;
      max-width: 500px;
      background: white;
      border-radius: 16px;
      padding: 3rem 2rem;
      box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
    }

    .offline-icon {
      font-size: 4rem;
      margin-bottom: 1.5rem;
      opacity: 0.8;
    }

    .offline-title {
      font-size: 2rem;
      color: #333;
      margin-bottom: 1rem;
      font-weight: 600;
    }

    .offline-message {
      font-size: 1.1rem;
      color: #666;
      margin-bottom: 2rem;
      line-height: 1.6;
    }

    .offline-features {
      text-align: left;
      background: #f8f9fa;
      border-radius: 8px;
      padding: 1.5rem;
      margin-bottom: 2rem;
    }

    .offline-features h2 {
      margin-top: 0;
      margin-bottom: 1rem;
      color: #0366d6;
      font-size: 1.2rem;
    }

    .offline-features ul {
      list-style: none;
      padding: 0;
      margin: 0;
    }

    .offline-features li {
      padding: 0.5rem 0;
      border-bottom: 1px solid #e1e5e9;
      font-size: 0.95rem;
      color: #555;
    }

    .offline-features li:last-child {
      border-bottom: none;
    }

    .offline-actions {
      display: flex;
      gap: 1rem;
      justify-content: center;
      margin-bottom: 2rem;
      flex-wrap: wrap;
    }

    .retry-btn, .home-btn {
      padding: 12px 24px;
      border: none;
      border-radius: 8px;
      font-size: 1rem;
      cursor: pointer;
      transition: all 0.3s;
      font-weight: 500;
    }

    .retry-btn {
      background: #0366d6;
      color: white;
    }

    .retry-btn:hover {
      background: #0256cc;
      transform: translateY(-2px);
    }

    .home-btn {
      background: #f6f8fa;
      color: #0366d6;
      border: 1px solid #0366d6;
    }

    .home-btn:hover {
      background: #f1f3f5;
      transform: translateY(-2px);
    }

    .offline-tips {
      text-align: left;
      background: #fff3cd;
      border-left: 4px solid #ffc107;
      padding: 1rem;
      border-radius: 4px;
    }

    .offline-tips h3 {
      margin-top: 0;
      margin-bottom: 0.5rem;
      color: #856404;
      font-size: 1.1rem;
    }

    .offline-tips ul {
      margin: 0;
      padding-left: 1.5rem;
    }

    .offline-tips li {
      color: #856404;
      font-size: 0.9rem;
      margin-bottom: 0.3rem;
    }

    .connection-status {
      position: fixed;
      top: 20px;
      right: 20px;
      padding: 12px 20px;
      border-radius: 8px;
      color: white;
      font-weight: 500;
      z-index: 10000;
      animation: slideIn 0.3s ease-out;
    }

    .connection-status.online {
      background: #28a745;
    }

    .connection-status.offline {
      background: #dc3545;
    }

    @keyframes slideIn {
      from {
        transform: translateX(100%);
        opacity: 0;
      }
      to {
        transform: translateX(0);
        opacity: 1;
      }
    }

    @media (max-width: 768px) {
      .offline-page {
        padding: 1rem;
      }

      .offline-content {
        padding: 2rem 1.5rem;
      }

      .offline-actions {
        flex-direction: column;
        align-items: stretch;
      }

      .retry-btn, .home-btn {
        width: 100%;
      }
    }

    /* Dark theme support */
    @media (prefers-color-scheme: dark) {
      .offline-page {
        background: linear-gradient(135deg, #1a1a1a 0%, #2d3748 100%);
      }

      .offline-content {
        background: #2d3748;
        color: #fff;
      }

      .offline-title {
        color: #fff;
      }

