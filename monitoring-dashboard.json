{
  "name": "LOFERSIL Landing Page - Monitoring Dashboard",
  "version": "1.0.0",
  "description": "Real-time monitoring dashboard for LOFERSIL Landing Page deployment and operations",
  "dashboard": {
    "title": "LOFERSIL Landing Page Operations",
    "refresh_interval": 30,
    "panels": [
      {
        "id": "overview",
        "title": "System Overview",
        "type": "summary",
        "grid_position": { "x": 0, "y": 0, "w": 12, "h": 2 },
        "metrics": [
          {
            "label": "Website Status",
            "type": "status",
            "source": "health_check",
            "query": "website.status"
          },
          {
            "label": "Overall Health",
            "type": "percentage",
            "source": "health_check",
            "query": "health.overall_score"
          },
          {
            "label": "Last Deployment",
            "type": "timestamp",
            "source": "github_actions",
            "query": "last_deployment.timestamp"
          },
          {
            "label": "Active Alerts",
            "type": "counter",
            "source": "alerting",
            "query": "active_alerts.count"
          }
        ]
      },
      {
        "id": "performance",
        "title": "Performance Metrics",
        "type": "timeseries",
        "grid_position": { "x": 0, "y": 2, "w": 6, "h": 4 },
        "metrics": [
          {
            "label": "Lighthouse Score",
            "source": "lighthouse",
            "query": "categories.performance.score",
            "unit": "percentage",
            "target": 90,
            "warning": 80
          },
          {
            "label": "Response Time",
            "source": "health_check",
            "query": "response_time_ms",
            "unit": "ms",
            "target": 500,
            "warning": 1000
          },
          {
            "label": "Build Time",
            "source": "github_actions",
            "query": "build.duration_seconds",
            "unit": "seconds",
            "target": 60
          }
        ]
      },
      {
        "id": "reliability",
        "title": "Reliability & Uptime",
        "type": "gauge",
        "grid_position": { "x": 6, "y": 2, "w": 6, "h": 4 },
        "metrics": [
          {
            "label": "Uptime (24h)",
            "source": "uptime_monitor",
            "query": "uptime.24h",
            "unit": "percentage",
            "target": 99.9
          },
          {
            "label": "Deployment Success Rate",
            "source": "github_actions",
            "query": "deployment_success_rate.7d",
            "unit": "percentage",
            "target": 96
          },
          {
            "label": "Error Rate",
            "source": "error_monitoring",
            "query": "error_rate.1h",
            "unit": "percentage",
            "target": 0.1
          }
        ]
      },
      {
        "id": "security",
        "title": "Security Status",
        "type": "table",
        "grid_position": { "x": 0, "y": 6, "w": 6, "h": 3 },
        "metrics": [
          {
            "label": "Critical Vulnerabilities",
            "source": "security_scan",
            "query": "vulnerabilities.critical",
            "unit": "count",
            "target": 0
          },
          {
            "label": "High Vulnerabilities",
            "source": "security_scan",
            "query": "vulnerabilities.high",
            "unit": "count",
            "target": 0
          },
          {
            "label": "SSL Certificate Days",
            "source": "ssl_monitor",
            "query": "certificate.days_remaining",
            "unit": "days",
            "target": 30,
            "warning": 7
          },
          {
            "label": "Security Headers",
            "source": "security_scan",
            "query": "security_headers.coverage",
            "unit": "percentage",
            "target": 100
          }
        ]
      },
      {
        "id": "deployments",
        "title": "Recent Deployments",
        "type": "list",
        "grid_position": { "x": 6, "y": 6, "w": 6, "h": 3 },
        "source": "github_actions",
        "query": "deployments.recent",
        "fields": [
          { "name": "timestamp", "label": "Time" },
          { "name": "environment", "label": "Environment" },
          { "name": "status", "label": "Status" },
          { "name": "duration", "label": "Duration" }
        ],
        "limit": 10
      },
      {
        "id": "alerts",
        "title": "Active Alerts",
        "type": "alerts",
        "grid_position": { "x": 0, "y": 9, "w": 12, "h": 3 },
        "source": "alerting",
        "query": "active_alerts",
        "group_by": "severity",
        "max_items": 20
      }
    ]
  },
  "data_sources": {
    "health_check": {
      "type": "script",
      "endpoint": "./scripts/health-check.sh",
      "refresh_interval": 120,
      "timeout": 30
    },
    "github_actions": {
      "type": "github_api",
      "endpoint": "https://api.github.com/repos/SilentCaMXMF/LOFERSIL-Landing-Page/actions/runs",
      "refresh_interval": 300,
      "authentication": "token"
    },
    "lighthouse": {
      "type": "lighthouse",
      "endpoint": "https://lofersil.pt",
      "refresh_interval": 1440,
      "timeout": 60
    },
    "uptime_monitor": {
      "type": "external",
      "endpoint": "https://api.uptimerobot.com/v2/getMonitors",
      "refresh_interval": 60,
      "authentication": "api_key"
    },
    "security_scan": {
      "type": "script",
      "endpoint": "npm audit --json",
      "refresh_interval": 1440,
      "timeout": 120
    },
    "ssl_monitor": {
      "type": "ssl_check",
      "endpoint": "lofersil.pt:443",
      "refresh_interval": 3600,
      "timeout": 10
    },
    "alerting": {
      "type": "internal",
      "storage": "./data/alerts.json",
      "refresh_interval": 30
    }
  },
  "alerting": {
    "channels": [
      {
        "name": "email",
        "type": "email",
        "enabled": true,
        "recipients": ["devops@company.com"],
        "conditions": {
          "severity": ["critical", "high"]
        }
      },
      {
        "name": "slack",
        "type": "webhook",
        "enabled": true,
        "url": "${SLACK_WEBHOOK_URL}",
        "conditions": {
          "severity": ["critical", "high", "medium"]
        }
      },
      {
        "name": "github_issues",
        "type": "github",
        "enabled": true,
        "repository": "SilentCaMXMF/LOFERSIL-Landing-Page",
        "conditions": {
          "severity": ["critical", "high"]
        }
      }
    ],
    "rules": [
      {
        "name": "website_down",
        "description": "Website is not accessible",
        "condition": "health_check.website.status != 'healthy'",
        "severity": "critical",
        "cooldown": 300,
        "actions": ["email", "slack", "github_issues"]
      },
      {
        "name": "performance_regression",
        "description": "Performance score below threshold",
        "condition": "lighthouse.categories.performance.score < 0.8",
        "severity": "high",
        "cooldown": 1800,
        "actions": ["email", "slack"]
      },
      {
        "name": "security_vulnerability",
        "description": "Critical security vulnerability detected",
        "condition": "security_scan.vulnerabilities.critical > 0",
        "severity": "critical",
        "cooldown": 3600,
        "actions": ["email", "slack", "github_issues"]
      },
      {
        "name": "ssl_expiring",
        "description": "SSL certificate expiring soon",
        "condition": "ssl_monitor.certificate.days_remaining < 7",
        "severity": "high",
        "cooldown": 86400,
        "actions": ["email", "slack"]
      },
      {
        "name": "build_time_increase",
        "description": "Build time exceeding threshold",
        "condition": "github_actions.build.duration_seconds > 120",
        "severity": "medium",
        "cooldown": 3600,
        "actions": ["slack"]
      }
    ]
  },
  "integrations": {
    "github": {
      "repository": "SilentCaMXMF/LOFERSIL-Landing-Page",
      "workflow_file": ".github/workflows/vercel-deploy-enhanced.yml"
    },
    "vercel": {
      "project_id": "${VERCEL_PROJECT_ID}",
      "organization_id": "${VERCEL_ORG_ID}"
    },
    "uptime_robot": {
      "api_key": "${UPTIMEROBOT_API_KEY}",
      "monitor_ids": ["${UPTIMEROBOT_MONITOR_ID}"]
    }
  },
  "configuration": {
    "timezone": "UTC",
    "date_format": "YYYY-MM-DD HH:mm:ss",
    "theme": "light",
    "auto_refresh": true,
    "export_formats": ["json", "csv", "pdf"],
    "retention": {
      "metrics": "30d",
      "alerts": "90d",
      "logs": "7d"
    }
  },
  "access_control": {
    "authentication": {
      "enabled": true,
      "method": "oauth2",
      "providers": ["github", "google"]
    },
    "authorization": {
      "roles": {
        "viewer": ["read"],
        "operator": ["read", "acknowledge_alerts"],
        "admin": ["read", "write", "configure", "manage_users"]
      }
    }
  },
  "maintenance": {
    "backup": {
      "enabled": true,
      "schedule": "0 2 * * *",
      "retention": "30d"
    },
    "cleanup": {
      "enabled": true,
      "schedule": "0 3 * * 0",
      "retention": {
        "logs": "7d",
        "metrics": "90d"
      }
    }
  }
}
