{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM"],
    "types": ["@types/node"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ES2020",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "outDir": "dist",
    "declaration": false,
    "sourceMap": true,
    "removeComments": false,
    "importHelpers": false,
    "downlevelIteration": false,
    "experimentalDecorators": false,
    "emitDecoratorMetadata": false,
    "jsx": "react-jsx"
  },
  "include": [
    "src/scripts/index.ts",
    "src/scripts/validation.ts",
    "src/scripts/types.ts",
    "src/scripts/modules/ContactFormManager.ts",
    "src/scripts/modules/EnvironmentLoader.ts",
    "src/scripts/modules/ErrorManager.ts",
    "src/scripts/modules/NavigationManager.ts",
    "src/scripts/modules/ScrollManager.ts",
    "src/scripts/modules/ThemeManager.ts",
    "src/scripts/modules/TranslationManager.ts",
    "src/scripts/modules/Utils.ts",
    "src/scripts/modules/simpleLogger.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    ".opencode/**/*",
    "tests/**/*",
    "src/scripts/modules/ai/**/*",
    "src/scripts/modules/mcp/**/*",
    "src/scripts/modules/automation/**/*",
    "src/scripts/modules/github/**/*",
    "src/scripts/modules/monitoring/**/*",
    "tasks/**/*"
  ]
}
