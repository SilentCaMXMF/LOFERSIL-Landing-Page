{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "types": ["node"],
    "allowJs": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "strictNullChecks": false,
    "noImplicitAny": false,
    "noImplicitReturns": false,
    "noImplicitThis": false,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "outDir": "dist",
    "declaration": false,
    "sourceMap": false,
    "removeComments": false,
    "importHelpers": false,
    "downlevelIteration": true,
    "experimentalDecorators": false,
    "emitDecoratorMetadata": false,
    "jsx": "react-jsx",
    "noEmitOnError": true,
    "skipDefaultLibCheck": true
  },
  "include": [
    "src/scripts/index.ts",
    "src/scripts/validation.ts",
    "src/scripts/types.ts",
    "src/scripts/modules/BackgroundSync.ts",
    "src/scripts/modules/Config.ts",
    "src/scripts/modules/ContactFormManager.ts",
    "src/scripts/modules/EnvironmentLoader.ts",
    "src/scripts/modules/ErrorManager.ts",
    "src/scripts/modules/EventManager.ts",
    "src/scripts/modules/NavigationManager.ts",
    "src/scripts/modules/SEOManager.ts",
    "src/scripts/modules/ThemeManager.ts",
    "src/scripts/modules/TranslationManager.ts",
    "src/scripts/modules/UIManager.ts",
    "src/scripts/modules/Utils.ts",
    "src/scripts/modules/logger.ts",
    "src/scripts/modules/mcp/index.ts",
    "src/scripts/modules/mcp/types.ts",
    "src/scripts/modules/mcp/transport-interface.ts",
    "src/scripts/modules/mcp/http-transport.ts",
    "src/scripts/modules/mcp/transport-factory.ts",
    "src/scripts/modules/mcp/multi-transport-client.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    ".opencode/**/*",
    "src/scripts/modules/github-issues/**/*",
    "src/scripts/modules/mcp/**/*.test.ts",
    "src/scripts/modules/mcp/**/*-example.ts",
    "src/scripts/modules/mcp/**/*-compilation-test.ts",
    "src/scripts/modules/AutomationTriggers.ts",
    "src/scripts/modules/GitHubApiClient.ts",
    "src/scripts/modules/GitHubIntegrationManager.ts",
    "src/scripts/modules/GitHubIssuesReviewerMain.ts",
    "src/scripts/modules/GitHubWebhookHandler.ts",
    "src/scripts/modules/MonitoringReporting.ts",
    "src/scripts/modules/OpenCodeAgent.ts",
    "src/scripts/modules/PerformanceTracker.ts",
    "src/scripts/modules/PushNotificationManager.ts",
    "src/scripts/modules/TaskManagementApi.ts",
    "src/scripts/modules/TaskManagementIntegration.ts",
    "src/scripts/modules/TaskManager.ts",
    "src/scripts/modules/github-projects.ts"
    "allowImportingTsExtensions": false,
    "noEmit": false,
    "incremental": true,
    "tsBuildInfoFile": "dist/.tsbuildinfo"
  },
  "include": ["src/**/*", "api/**/*"],
  "exclude": [
    "src/**/*.test.ts",
    "src/github-system/tests/**/*.test.ts",
    "node_modules",
    "dist",
    ".opencode/**/*"
  ]
}
